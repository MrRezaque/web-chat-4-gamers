<!DOCTYPE html>
<html>
<head>
  <title>Чат для геймеров - <%= request.host %> </title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="header">
      <div class="logo-wrap go-left"><a href="/"><%= image_tag 'head/logo.png' %></a></div>

      <div class="go-right">
          <% if current_user %>
            <%= render 'layouts/user_data' %>
          <% else %>
            <%= render 'layouts/login_form' %>
          <% end %>
      </div>
    </div>


	<%= yield %>



</body>
</html>
